 <% if current_user.favorite?(micropost) %>
    <%= form_with(model: current_user.fvs.find_by(micropost_id: micropost.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= f.submit 'Unfavorite', class: 'btn btn-danger' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.fvs.build, local: true) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= f.submit 'Favorite', class: 'btn btn-primary' %>
    <% end %>
  <% end %>